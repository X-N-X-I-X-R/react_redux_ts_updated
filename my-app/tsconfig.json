{
  "compilerOptions": {
    "target": "es5", // Updated from "ES2020" to "es5"
    "useDefineForClassFields": true,
    "lib": ["dom", "dom.iterable", "esnext"], // Updated
    "module": "commonjs", // Updated from "ESNext" to "commonjs"
    "skipLibCheck": true,
    "moduleResolution": "node", // Updated from "bundler" to "node"
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react", // Updated from "react-jsx" to "react"
    "esModuleInterop": true, // Added
    "allowSyntheticDefaultImports": true, // Added
    "noImplicitAny": false, // Added
    "noUnusedLocals": false, // Updated from true to false
    "noUnusedParameters": false, // Updated from true to false
    "removeComments": true, // Added
    "strictNullChecks": true, // Added
    "preserveConstEnums": true, // Added
    "sourceMap": true, // Added
    "baseUrl": ".", // Added
    "types": ["node"], // Added
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}